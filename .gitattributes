# Auto detect text files and perform LF normalization
* text=auto

# C++ source files
*.cpp text diff=cpp
*.hpp text diff=cpp
*.h text diff=cpp
*.cc text diff=cpp
*.cxx text diff=cpp
*.c text diff=c

# CMake files
*.cmake text
CMakeLists.txt text

# Documents
*.md text
*.txt text
LICENSE text

# Scripts
*.sh text eol=lf
*.bat text eol=crlf
*.cmd text eol=crlf

# Binary files
*.dll binary
*.lib binary
*.a binary
*.so binary
*.dylib binary
*.exe binary

# Exclude files from archive
.gitattributes export-ignore
.gitignore export-ignore
